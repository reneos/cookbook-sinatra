  <div class="row">
    <div class="col">
      <h1>Enter recipe information</h1>
    </div>
  </div>

  <form action="/recipes" method="POST">

    <div class="form-group">
      <label for="name">Recipe name</label>
      <input type="text" name="name" class="form-control" id="name">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea name ="description" class="form-control" id="description" rows="5"></textarea>
    </div>

    <div class="form-row">
      <div class="col">
        <label for="difficulty">Select recipe difficulty</label>
        <select name="difficulty" class="form-control" id="difficulty">
          <option value="Easy">Easy</option>
          <option value="Medium">Medium</option>
          <option value="Hard">Hard</option>
        </select>
      </div>
      <div class="col">
        <label for="prep_time">Prep time in minutes</label>
        <div class="input-group">
        <input type="text" name="prep_time" class="form-control" id="prep_time">
        <div class="input-group-append">
          <span class="input-group-text">mins</span>
        </div>
        </div>
      </div>
    </div>

      <button type="submit" class="btn btn-primary mt-3">Submit</button>

  </form>

