<div class="row">
  <div class="col">
    <h1>Recipe list</h1>
  </div>
</div>
<form action="/change" method="POST">
  <div class="row">
    <div class="col">
      <ul class="list-group">
        <% if @recipes.empty? %>
          <li class="list-group-item">No recipes saved.</li>
        <% else %>
          <% @recipes.each_with_index do |recipe, index| %>
          <label for="<%= index %>">
          <li class="list-group-item d-flex align-items-center">
              <input class="checkbox" type="checkbox" name="checked[]" value="<%= index %>" id="<%= index %>">
              <a href="/recipe/<%= index %>"><%= recipe.name %></a>
              <span class="ml-auto badge badge-primary badge-pill <%= recipe.difficulty.downcase %>"><%= recipe.difficulty %></span>
              <span class="badge badge-primary badge-pill"><%= recipe.prep_time %></span>
              <span class="badge badge-primary badge-pill"><%= recipe.done? ? "Done!" : "Not done" %></span>
          </li>
          </label>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex mt-2">
      <button type="submit" name="action" value="mark" class="mr-1 btn btn-primary">Mark as done</button>
      <button type="submit" name="action" value="delete" class="btn btn-danger">Delete</button>
      <a href="/add" class="btn btn-primary ml-auto">Add a new recipe</a>
    </div>
  </div>

</form>

<div class="row mt-5">
  <div class="col">
    <h1>Search BBC recipes for ingredient</h1>
  </div>
</div>
<form action="/search_bbc">
  <div class="form-group">
    <input type="text" name="ingredient" class="form-control" id="ingredient">
    <button type="submit" class="btn btn-primary mt-2">Get BBC Recipes</button>
  </div>

</form>
